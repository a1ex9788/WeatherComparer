<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="weatherConditionText"
            type="String" />

        <variable
            name="windSpeed"
            type="String" />

        <variable
            name="averageTemperature"
            type="String" />

        <variable
            name="rainProbability"
            type="String" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        map:mapType="normal"
        map:uiZoomControls="true"
        map:uiZoomGestures="true"
        tools:context=".MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/fcvForecast"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/ibNavigationDrawer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/clear"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_menu" />

            <com.airbnb.lottie.LottieAnimationView

                android:id="@+id/animationViewWeather"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_speed="1.1"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/weatherTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{weatherConditionText}"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/animationViewWeather" />

            <ImageView
                android:id="@+id/windIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/wind"
                app:layout_constraintEnd_toStartOf="@+id/textView"
                app:layout_constraintRight_toLeftOf="@id/temperatureIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/weatherTextView" />

            <ImageView
                android:id="@+id/temperatureIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/temperature"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/weatherTextView" />

            <ImageView
                android:id="@+id/rainIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/rain"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@id/weatherTextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:text="@{windSpeed}"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/windIcon"
                app:layout_constraintEnd_toStartOf="@+id/textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/windIcon" />

            <View
                android:id="@+id/firstVerticalLine"
                android:layout_width="3dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:background="@color/grey"
                app:layout_constraintEnd_toStartOf="@+id/rainIcon"
                app:layout_constraintStart_toEndOf="@+id/temperatureIcon"
                app:layout_constraintTop_toBottomOf="@id/weatherTextView" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:text="@{averageTemperature}"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/temperatureIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/temperatureIcon" />

            <View
                android:id="@+id/secondVerticalLine"
                android:layout_width="3dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:background="@color/grey"
                app:layout_constraintEnd_toStartOf="@+id/temperatureIcon"
                app:layout_constraintStart_toEndOf="@+id/windIcon"
                app:layout_constraintTop_toBottomOf="@id/weatherTextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:text="@{rainProbability}"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/rainIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="@+id/rainIcon" />

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <include layout="@layout/bottom_sheet_layout" />


            </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>